import seaborn.objects as so
from gapminder import gapminder


def plot():
    figura = (
        so.Plot(
            gapminder[gapminder.country == "Swiss" or gapminder.country == "Argentina"],
            x="year",
            y="gdpPercap",
            color="country",
        )
        .add(so.Line())
        .label(
            title="Diferencia de GDP Per Capita entre Suiza y Argentina",
            x="Año",
            y="GDP Per Capita",
            color="País",
        )
    )
    return dict(
        descripcion="Diferencia de GDP Per Capita entre Suiza y Argentina a lo largo de los años",
        autor="iggallardo-uba",
        figura=figura,
    )
